<%- include("templates/header") %>

<% if (!req.session.authenticated) { %>
    <% res.redirect('/login'); %>
<% } %>

<div class="container mt-5">
    <h1>Favourites</h1>
    <div class="star-container">
        <input type="checkbox" id="star" class="star-checkbox">
        <label for="star" class="star">&#9734;</label>
        <div class="star-text">Click the star!</div>
    </div>
    <div class="accordion" id="accordionExample" style="overflow-y: auto; max-height: 400px;">
      <!-- Accordion items will be dynamically added/removed here -->
    </div>
</div>
    
    <button id="addAccordionItem">Add Accordion Item</button>
    <button id="removeAccordionItem">Remove Accordion Item</button>
<script src="/js/star.js"></script>
<script src="/js/favourites.js"></script>

<%- include("templates/footer") %>